<div class="container-fluid main-container">
    <div class="card">
        <div class="card-header">
            <h3>SIGNUP</h3>
        </div>
        <div class="card-body">
            <form class="signup-form">
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input for="username" id="signup-username" type="text" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input for="password" type="password" id="signup-password" class="form-control">
                </div>
                <button class="btn btn-primary btn-login" type="submit">SIGN UP</button>
            </form>
            <a href="/login" class="signup-link"><h6>Login instead</h6></a>
        </div>
    </div>    
</div>

<script src="./js/signup.js"></script>